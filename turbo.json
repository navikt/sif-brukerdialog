{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"]
        },
        "build-package": {
            "outputs": ["lib/**"],
            "dependsOn": ["^build-package"]
        },
        "build-app": {
            "outputs": ["dist/**"],
            "dependsOn": ["^build-package"]
        },
        "test": {
            "outputs": [],
            "dependsOn": ["^build-package"]
        },
        "test-watch": {
            "outputs": [],
            "dependsOn": ["^build-package"]
        },
        "test-coverage": {
            "outputs": ["coverage/**"],
            "dependsOn": ["^build-package"]
        },
        "lint": {
            "dependsOn": ["^lint"],
            "outputs": []
        },
        "dev": {
            "cache": false
        },
        "clean": {
            "cache": false
        }
    }
}
