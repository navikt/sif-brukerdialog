{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"]
        },
        "build-package": {
            "outputs": ["lib/**"],
            "dependsOn": ["^build-package"]
        },
        "build-app": {
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
            
        },
        "test": {
            "outputs": [],
            "dependsOn": ["^build-package"]
        },
        "lint": {
            "outputs": [],
            "dependsOn": ["^lint"]
        },
        "dev-lib": {
            "cache": false
        },
        "clean": {
            "cache": false
        },
        "start-e2e-server": {
            "outputs": [],
            "dependsOn": ["^build-app"]
        },
        "cypress-run": {
            "outputs": [],
            "dependsOn": ["^build-app"]
        },
        "playwright-test": {
            "outputs": [],
            "dependsOn": ["build-app"]
        }
    }
}
