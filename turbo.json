{
    "$schema": "https://turborepo.org/schema.json",
    "globalEnv": [],
    "tasks": {
        "demo:build": {
            "outputs": ["dist-demo/**"]
        },
        "e2e:build": {
            "outputs": ["dist-demo/**"]
        },
        "gen:types": {
            "outputs": []
        },
        "build": {
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
            "dependsOn": ["^build"]
        },
        "build-storybook": {
            "outputs": ["dist/**", ".next/**", "!.next/cache/**", "storybook-static/**"],
            "dependsOn": ["^build"]
        },
        "storybook:build": {
            "outputs": ["dist/**", ".next/**", "!.next/cache/**", "storybook-static/**"],
            "dependsOn": ["^build"]
        },
        "test": {
            "outputs": []
        },
        "lint": {
            "dependsOn": ["lint:eslint", "lint:tsc"]
        },
        "lint:eslint": {},
        "lint:tsc": {},
        "clean": {
            "cache": false
        },
        "start-e2e-server": {
            "outputs": [],
            "dependsOn": ["^build"]
        },
        "playwright-test": {
            "outputs": [],
            "dependsOn": ["^build"],
            "env": ["PLAYWRIGHT_BROWSERS_PATH"]
        }
    }
}
