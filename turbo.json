{
    "$schema": "https://turborepo.org/schema.json",
    "baseBranch": "origin/main",
    "pipeline": {
        "build": {
            "outputs": ["dist/**", "public/dist/**"],
            "dependsOn": ["^build"]
        },
        "dev-lib": {
            "outputs": ["dist/**", "public/dist/**"],
            "dependsOn": ["^build"]
        },
        "test": {
            "outputs": [],
            "dependsOn": ["^build"]
        },
        "test-w": {
            "outputs": [],
            "dependsOn": ["^build"]
        },
        "test-c": {
            "outputs": ["coverage/**"],
            "dependsOn": ["^build"]
        },
        "lint": {
            "dependsOn": ["^build"],
            "outputs": []
        },
        "dev": {
            "cache": false
        },
        "clean": {
            "cache": false
        }
    }
}
