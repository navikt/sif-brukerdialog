{
    "$schema": "https://turborepo.org/schema.json",
    "tasks": {
        "build": {
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
            "dependsOn": ["^build"]
        },
        "test": {
            "outputs": [],
            "dependsOn": ["lint"]
        },
        "lint": {
            "dependsOn": ["lint:eslint", "lint:tsc"]
        },
        "lint:eslint": {},
        "lint:tsc": {},
        "clean": {
            "cache": false
        },
        "start-e2e-server": {
            "outputs": [],
            "dependsOn": ["^build"]
        },
        "playwright-test": {
            "outputs": [],
            "dependsOn": ["^build"]
        }
    }
}
