{
    "author": "NAV",
    "description": "Monorepo for felleskode og selvbetjeningsdialoger i Sykdom i familien",
    "license": "MIT",
    "name": "@navikt/sif-brukerdialog",
    "repository": "https://github.com/navikt/sif-brukerdialog",
    "version": "0.0.1",
    "bugs": {
        "url": "https://github.com/navikt/sif-brukerdialog/issues"
    },
    "devDependencies": {
        "@snyk/protect": "^1.947.0",
        "@storybook/builder-webpack5": "^6.5.7",
        "@storybook/manager-webpack5": "^6.5.7",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^12.1.3",
        "@testing-library/react-hooks": "^8.0.0",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^28.1.1",
        "esbuild": "^0.14.43",
        "esbuild-jest": "^0.5.0",
        "husky": "^8.0.1",
        "jest-environment-jsdom": "^28.1.1",
        "jsdom": "^19.0.0",
        "lint-staged": "^13.0.0",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^9.1.0",
        "postcss-loader": "^7.0.0",
        "postcss-nested": "^5.0.6",
        "prettier": "^2.6.2",
        "ts-jest": "^28.0.4",
        "turbo": "^1.2.16",
        "typescript": "^4.7.3"
    },
    "lint-staged": {
        "apps/**/*.{ts,tsx}": [
            "eslint --fix"
        ],
        "sif-common-packages/**/*.{ts,tsx}": [
            "eslint --fix"
        ]
    },
    "scripts": {
        "build": "turbo run build",
        "clean": "turbo run clean && rm -rf node_modules",
        "dev": "turbo run dev --no-cache --parallel --continue",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "lint": "turbo run lint",
        "prepare": "husky install",
        "test": "turbo run test",
        "test-w": "turbo run test-w",
        "test-c": "turbo run test-c"
    },
    "workspaces": [
        "apps/*",
        "sif-common-packages/*"
    ],
    "private": false,
    "snyk": true
}
