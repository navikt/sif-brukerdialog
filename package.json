{
    "author": "NAV",
    "description": "Monorepo for felleskode og selvbetjeningsdialoger i Sykdom i familien",
    "license": "MIT",
    "name": "@navikt/sif-brukerdialog",
    "repository": "https://github.com/navikt/sif-brukerdialog",
    "version": "0.0.1",
    "bugs": {
        "url": "https://github.com/navikt/sif-brukerdialog/issues"
    },
    "devDependencies": {
        "@changesets/cli": "2.26.1",
        "@navikt/ds-tailwind": "4.1.7",
        "@storybook/builder-webpack5": "7.0.22",
        "@storybook/manager-webpack5": "6.5.16",
        "@testing-library/dom": "9.3.1",
        "@testing-library/jest-dom": "5.16.5",
        "@testing-library/react": "14.0.0",
        "@testing-library/react-hooks": "8.0.1",
        "@testing-library/user-event": "14.4.3",
        "check-peer-dependencies": "^4.2.0",
        "esbuild": "0.18.10",
        "esbuild-jest": "0.5.0",
        "eslint": "8.43.0",
        "eslint-plugin-prettier": "4.2.1",
        "husky": "8.0.3",
        "jest-environment-jsdom": "29.5.0",
        "jsdom": "22.1.0",
        "lint-staged": "13.2.2",
        "npm-run-all": "4.1.5",
        "npm-watch": "0.11.0",
        "postcss": "8.4.24",
        "postcss-cli": "10.1.0",
        "postcss-loader": "7.3.3",
        "postcss-nested": "6.0.1",
        "prettier": "2.8.8",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-scripts": "5.0.1",
        "react-syntax-highlighter": "15.5.0",
        "storybook": "7.0.22",
        "turbo": "1.10.3",
        "typescript": "5.1.3",
        "webpack": "5.87.0",
        "yarn-audit-fix": "9.3.12"
    },
    "lint-staged": {
        "apps/**/*.{ts,tsx}": [
            "eslint --fix"
        ],
        "packages/**/*.{ts,tsx}": [
            "eslint --fix"
        ]
    },
    "scripts": {
        "build": "turbo run build",
        "build-package": "turbo run build-package",
        "bp": "turbo run build-package",
        "build-app": "turbo run build-app",
        "build-sif-ettersending": "turbo run build-app --filter=@navikt/sif-ettersending",
        "e2e-sif-ettersending": "turbo run ci --filter=@navikt/sif-ettersending",
        "build-omsorgspengesoknad": "turbo run build-app --filter=@navikt/omsorgspengesoknad",
        "e2e-omsorgspengesoknad": "turbo run ci --filter=@navikt/omsorgspengesoknad",
        "build-endringsmelding-pleiepenger": "turbo run build-app --filter=@navikt/endringsmelding-pleiepenger",
        "e2e-endringsmelding-pleiepenger": "turbo run ci --filter=@navikt/endringsmelding-pleiepenger",
        "build-ekstra-omsorgsdager-andre-forelder-ikke-tilsyn": "turbo run build-app --filter=@navikt/ekstra-omsorgsdager-andre-forelder-ikke-tilsyn",
        "e2e-ekstra-omsorgsdager-andre-forelder-ikke-tilsyn": "turbo run ci --filter=@navikt/ekstra-omsorgsdager-andre-forelder-ikke-tilsyn",
        "build-omsorgsdager-aleneomsorg-dialog": "turbo run build-app --filter=@navikt/omsorgsdager-aleneomsorg-dialog",
        "e2e-omsorgsdager-aleneomsorg-dialog": "turbo run ci --filter=@navikt/omsorgsdager-aleneomsorg-dialog",
        "ba": "turbo run build-app",
        "clean": "turbo run clean",
        "clean-all": "turbo run clean && rm -rf node_modules",
        "dev": "turbo run dev --no-cache --parallel --continue",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "prepare": "husky install",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "test-watch": "turbo run test-watch",
        "test-coverage": "turbo run test-coverage"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "overrides": {
        "react-scripts": {
            "nth-check": ">=2.0.1"
        },
        "glob-parent": ">=5.1.2"
    },
    "private": true,
    "packageManager": "yarn@3.5.0"
}
