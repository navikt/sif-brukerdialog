{
    "extends": "../config/tsconfig-base.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "jsx": "react",
        "module": "esnext",
        "outDir": "./lib",
        "target": "es2015",
        "lib": ["dom", "dom.iterable", "es2015", "es2016", "es2017"]
    },
    "exclude": [
        "node_modules",
        ".turbo",
        ".storybook",
        "lib",
        "src/**/*.spec.*",
        "src/**/*.test.*",
        "src/**/*.stories.*"
    ],
    "include": ["src"]
}
