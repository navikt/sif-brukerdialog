{
    "extends": "../../packages/config/tsconfig-apps.json",
    "compilerOptions": {
        "baseUrl": "./",

        "outDir": "build/dist",
        "typeRoots": ["../../node_modules/@types", "./node_modules/@types"],
        "paths": {
            "@i18n/*": ["./src/app/i18n/*"],
            "@sb/*": ["./src/storybook/*"]
        }
    },
    "exclude": ["node_modules", "src/build", "**.js", "dist"],
    "include": [
        "./src/**/*",
        "./mock/**/*",
        "./playwright-config.ts",
        "./env.schema.ts",
        "./playwright/**/*.ts",
        "./vite-env.d.ts",
        "./tailwind.config.ts",
        "./postcss.config.ts"
    ]
}
