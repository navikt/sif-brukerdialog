{
    "extends": "../../packages/config/tsconfig-apps.json",
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "build/dist",
        "typeRoots": ["../../node_modules/@types", "./node_modules/@types"],
        "paths": {
            "@i18n/*": ["./src/app/i18n/*"],
            "@sb/*": ["./src/storybook/*"]
        }
    },
    "sourceMap": true,
    "exclude": ["node_modules", "src/build", "**.js", "dist"],
    "include": ["./src/app/**/*", "./src/mocks/**/*", "envSchema.ts"]
}
