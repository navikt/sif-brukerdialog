{
    "extends": "../../packages/config/tsconfig-apps.json",
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "build/dist",
        "paths": {
            "@app/*": ["app/*"],
            "@app": ["app"]
        },
        "typeRoots": ["../../node_modules/@types", "./node_modules/@types", "./src/app/types"]
    },
    "exclude": ["node_modules", "src/build", "**.js", "dist"],
    "include": [
        "./src/app/**/*",
        "./mock/**/*",
        "./playwright-config.ts",
        "./env.schema.ts",
        "./playwright/**/*.ts",
        "./vite-env.d.ts",
        "./tailwind.config.ts",
        "./postcss.config.ts"
    ]
}
