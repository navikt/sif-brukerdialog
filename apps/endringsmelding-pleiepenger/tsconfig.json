{
    "extends": "../../packages/config/tsconfig-apps.json",
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "build/dist",
        "paths": {
            "@types": ["app/types"],
            "@hooks": ["app/hooks"],
            "@utils": ["app/utils"]
        },
        "typeRoots": ["../../node_modules/@types", "./node_modules/@types", "./src/app/types"]
    },
    "exclude": ["node_modules", "src/build", "**.js", "dist"],
    "include": ["./src/app/**/*", "./src/mocks/**/*", "./e2e/playwright/**/*", "./playwright-config.ts"]
}
