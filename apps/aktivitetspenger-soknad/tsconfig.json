{
    "extends": "../../packages/config/tsconfig-apps.json",
    "compilerOptions": {
        "outDir": "build/dist",
        "typeRoots": ["../../node_modules/@types", "./node_modules/@types", "./src/types"],
        "baseUrl": "./",
        "paths": {
            "@app/types/*": ["src/types/*"],
            "@app/utils/*": ["src/utils/*"],
            "@app/i18n": ["src/i18n/index"],
            "@app/i18n/*": ["src/i18n/*"],
            "@app/components/*": ["src/components/*"],
            "@app/hooks/*": ["src/hooks/*"],
            "@app/storybook/*": ["storybook/*"],

            "@søknad/*": ["src/søknad/*"],
            "@søknad/components/*": ["src/søknad/components/*"],
            "@søknad/types/*": ["src/søknad/types/*"]
        }
    },
    "exclude": [
        "node_modules",
        "src/build",
        "**.js",
        "dist",
        "dist-demo",
        "demo",
        "**/node_modules/@types/react-router/**",
        "**/node_modules/@types/react-router-dom/**"
    ],
    "include": [
        "./src/**/*",
        "./mock/**/*",
        "./playwright-config.ts",
        "./env.schema.ts",
        "./playwright/**/*.ts",
        "./vite-env.d.ts",
        "./tailwind.config.ts",
        "./postcss.config.ts",
        "./storybook/**/*"
    ]
}
