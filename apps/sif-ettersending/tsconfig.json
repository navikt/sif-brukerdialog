{
    "compilerOptions": {
        "outDir": "build/dist",
        "module": "esnext",
        "target": "es5",
        "lib": ["es6", "dom", "es2017"],
        "sourceMap": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "baseUrl": "./src",
        "esModuleInterop": true,
        "paths": { "@sif-common-core-ds/*": ["./src/sif-common-core-ds/*"] }
    },
    "include": ["./src/app/**/*", "./src/sif-common-core-ds/**/*"],
    "exclude": ["node_modules", "./src/build", "**.js", "dist"]
}
