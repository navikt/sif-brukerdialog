        "storybook": "7.0.17",
        "storybook-formik": "2.4.2",
        "webpack": "5.84.1"
    },
    "directories": {
        "lib": "lib"
    },
    "jest": {
        "transformIgnorePatterns": [
            "node_modules/(?!(@navikt)).*\\.js$"
        ]
    },
    "overrides": {
        "react-refresh": "0.11.0"
    },
    "peerDependencies": {
        "@navikt/ds-css": "3",
        "@navikt/ds-datepicker": ">=4.1.7",
        "@navikt/ds-react": "3",
        "formik": "2.x",
        "react-intl": "6.x"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/navikt/sif-common-formik-ds.git"
    },
    "scripts": {
        "build": "npm-run-all build-package",
        "build-package": "npm-run-all compile-lib-script copy-files",
        "build-storybook": "build-storybook -s public",
        "clean": "rm -rf node_modules lib",
        "clean-lib": "rimraf ./lib",
        "compile-lib-script": "tsc -p tsconfig.json",
        "compile-lib-script-watch": "tsc -p tsconfig.json --watch",
        "copy-css-files-to-lib": "copyfiles -u 1 \"src/**/*.css\" lib",
        "copy-files": "npm-run-all copy-css-files-to-lib copy-sass-files-to-lib",
        "copy-sass-files-to-lib": "copyfiles -u 1 \"src/**/*.scss\" lib",
        "dev": "yarn watch-styles & yarn compile-lib-script-watch",
        "storybook": "storybook dev -p 6006 -s public",
        "test": "react-scripts test --watchAll=false --env=jsdom",
        "test-coverage": "react-scripts test a --coverage --watchAll=false",
        "test-coverage-watch": "react-scripts test a --coverage --watchAll=true",
        "test-watch": "react-scripts test",
        "watch-styles": "npm-watch copy-files"
    },
    "watch": {
        "copy-files": {
            "extensions": "css,scss",
            "patterns": [
                "src"
            ],
            "runOnChangeOnly": true
        }
    },
    "files": [
        "package.json",
        "/lib"
    ]
}
