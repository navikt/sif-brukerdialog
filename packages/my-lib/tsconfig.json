{
    "extends": "tsconfig/base.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "./lib",
        "target": "es2015",
        "lib": ["dom", "ES2015"],
        "composite": true
    },
    "exclude": ["node_modules", ".turbo", "lib"],
    "include": ["src", "vite.config.ts"]
}
